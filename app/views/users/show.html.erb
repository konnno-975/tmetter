<div class="main user-show">
    <div class="container">
        <div class="user">
            <% if @user.image.present? %>
                <img src=<%=@user.image %> class ="icon_image">
            <%else%>
                <p class="user-default"></p>
            <% end %>
            <h2><%=@user.name%></h2>
            <p><%=@user.email%></p>
        </div>

        <ul class="user-tabs">
            <li class="active"><%= link_to("投稿","/users/#{@user.id}") %></li>
            <li><%= link_to("いいね","/users/#{@user.id}/likes")%></li>
        </ul>

        <% @user.posts.each do |post|%>
            <div class="posts-index-item">
                <div class="post-left">
                    <% if post.user.image.present? %>
                        <img src=<%=post.user.image %>>
                    <% else %>
                        <p class="post-default"></p>
                    <% end %>
                </div>
                <div class="post-right">
                    <div class="post-user-name">
                        <%=link_to(post.user.name,"/users/#{post.user_id}")%>
                    </div>
                    <%=link_to(post.content,"/posts/#{post.id}")%>
                </div>
            </div>
        <% end %>
    </div>
</div>